# System
alias clear="tput reset"
alias ls="exa --icons --color=always"
alias df="duf"
alias tree="exa --icons --color=always --tree"
alias find="fd"
alias cat="bat -p"
alias vim="lvim"
alias update="apt update && apt upgrade -y; apt dist-upgrade"
# Projetos
alias rbpro="touch project.rb && chmod +x project.rb && echo '#!/usr/bin/env ruby' >> project.rb"
alias pypro="touch project.py && chmod +x project.py && echo '#!/usr/bin/env python3' >> project.py"
alias luapro="touch project.lua && chmod +x project.lua && echo '#!/usr/bin/env lua' >> project.lua"
alias nodepro="touch project.js && chmod +x project.js && echo '#!/usr/bin/env node' >> project.js"
alias shpro="touch project.sh && chmod +x project.sh && echo '#!/usr/bin/env bash' >> project.sh"

# Directory
alias projeto="cd ~/Projetos/"
